<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/hhy"
    tools:context=".MainActivityresid">

    <TextView
        android:id="@+id/textView"
        android:layout_width="381dp"
        android:layout_height="50dp"
        android:layout_marginTop="116dp"
        android:textColorHint="@color/black"
        android:hint="To:"
        android:textStyle="bold"

        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_text_to"
        android:layout_width="383dp"
        android:layout_height="59dp"
        android:layout_marginTop="180dp"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.392"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="357dp"
        android:layout_height="33dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="40dp"
        android:hint="Subject:"
        android:textColorHint="@color/black"
        android:textStyle="bold"

        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edit_text_subject" />

    <EditText
        android:id="@+id/edit_text_subject"
        android:layout_width="382dp"
        android:layout_height="74dp"
        android:layout_marginTop="92dp"
        android:inputType="textEmailSubject"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.344"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="368dp"
        android:layout_height="33dp"
        android:layout_marginBottom="12dp"
        android:hint="Message:"
        android:textColorHint="@color/black"
        android:textStyle="bold"

        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/edit_text_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.325"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edit_text_message"
        android:layout_width="375dp"
        android:layout_height="165dp"
        android:layout_marginBottom="264dp"
        android:gravity="start|top"
        android:lines="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/button_send"
        style="@style/MaterialAlertDialog.Material3"

        android:layout_width="241dp"
        android:layout_height="73dp"
        android:layout_marginEnd="84dp"
        android:backgroundTint="#CA492D"
        android:text="Envoyez"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_message"
        app:layout_constraintVertical_bias="0.052" />



</androidx.constraintlayout.widget.ConstraintLayout>